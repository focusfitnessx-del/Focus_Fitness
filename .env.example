# Environment Variables for Focus Fitness
# Copy this file to .env and fill in the values

# PostgreSQL
POSTGRES_USER=focusfitness
POSTGRES_PASSWORD=focusfitness123
POSTGRES_DB=focusfitness

# JWT
JWT_SECRET=change_this_to_a_very_long_random_secret_in_production
JWT_EXPIRES_IN=7d

# App
NODE_ENV=production
PORT=4000

# Email (Gmail SMTP)
# For Gmail: enable 2FA and create an App Password
EMAIL_USER=your_gmail@gmail.com
EMAIL_PASS=your_gmail_app_password
EMAIL_FROM=Focus Fitness <noreply@focusfitness.lk>

# WhatsApp (Meta Cloud API) - Leave blank for placeholder mode
WHATSAPP_API_URL=
WHATSAPP_TOKEN=
WHATSAPP_PHONE_ID=

# CORS — set to your frontend's production URL (e.g. https://app.focusfitness.lk)
# In development this defaults to http://localhost:5173 automatically.
CORS_ORIGIN=https://app.yourdomain.com

# Hardware device entry key — used by physical access control hardware
DEVICE_API_KEY=change_this_to_a_long_random_secret

# Frontend
VITE_API_URL=http://localhost:4000/api
